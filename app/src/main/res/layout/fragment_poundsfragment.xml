<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Poundsfragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@drawable/background"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pounds Converter"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#063740"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_text_input3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="250dp"
                android:background="@drawable/fragedittxtstyle"
                android:fontFamily="sans-serif-condensed"
                android:hint="Pounds"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="lb"
                android:textSize="30dp"/>

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TO"
                android:textSize="40dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/grams_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grams"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:background="@drawable/fragbtnstyle"/>

                <Button
                    android:id="@+id/kilograms_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilograms"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:background="@drawable/fragbtnstyle"/>

                <Button
                    android:id="@+id/tonnes_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tonnes"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:background="@drawable/fragbtnstyle"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_out3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:background="@drawable/fragedittxtstyle"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/text_view_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="sans-serif-smallcaps"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textColor="#9F9494"
            android:text="Designed by Dinesh Prajapati"/>

    </LinearLayout>

</FrameLayout>